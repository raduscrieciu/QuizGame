<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    style="@style/QuizGame.Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.quizgame.regions.ChoicesActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/questionText_choices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/choices_hintLayout"
            android:layout_margin="10dp"
            android:background="#C0E8EEFA"
            android:gravity="center"
            android:text="Question"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/choices_hintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3" >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/answerButton1"
            style="@style/QuizGame.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/answerButton2"
            style="@style/QuizGame.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/answerButton3"
            style="@style/QuizGame.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>